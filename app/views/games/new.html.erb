<h2>New Game</h2>
<p>
<% @letters.each do |letter| %>
  <span class="bg-primary text-white border p-2"><%= letter.upcase %></span>
<% end %>
</p>
<p>What is the longest word you can find?</p>
<form action="/score" method="post" data-turbo="false" class="row">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @letters %>
  <div class="col px-0">
    <input type="text" name="word" class="form-control">
  </div>
  <div class="col px-0">
    <input type="submit" value="Play" class="btn btn-outline-primary">
  </div>
</form>
